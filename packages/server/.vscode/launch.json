    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "seed test",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
              "db:seed:test"
            ],
            "cwd": "${workspaceRoot}",
            "timeout": 10000
          },
        {
            "type": "node",
            "request": "attach",
            "name": "Mocha Attach",
            "port": 9229,
            "continueOnAttach": true,
            "autoAttachChildProcesses": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "Mocha Setup"
        }
    ]
}